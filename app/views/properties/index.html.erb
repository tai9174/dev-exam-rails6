<p id="notice"><%= notice %></p>

<h1>一覧</h1>
<hr>
<h2>物件一覧</h2>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃貸</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.rent %>円<br></td>
        <td><%= property.address %></td>
        <td><%= property.age %>年<br></td>
        <td><%= property.remarks %></td>
        <td><%= link_to '詳細', property %></td>
        <td><%= link_to '編集', edit_property_path(property) %></td>
        <td><%= link_to '削除', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

