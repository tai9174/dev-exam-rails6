<p id="notice"><%= notice %></p>
<h1>閲覧</h1>
<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>
<hr>

<% count=0 %>

<% @stations.each do |station| %>
<% count +=1 %>
<h2>最寄り駅<%=" #{count}"%></h2>
  <% if @property.stations.any? %>
  <p>
    <strong>路線名:</strong>
    <%= station.route_name %>
  </p>
  <p>
    <strong>駅名:</strong>
    <%= station.station_name %>
  </p>
  <p>
    <strong>徒歩分数:</strong>
    <%= station.minutes_on_foot %>
  </p>
  <% end %>
<% end %>
<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
